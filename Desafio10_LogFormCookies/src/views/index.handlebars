<h1 class="text-center">Bienvenido: {{name}}</h1>
<div class="mt-3 row">
    <div class="mt-3 col">
        <h1 class="text-center" style="color:blue;">Ingrese producto:</h1>
        <form>
            <div class="form-group">
                <label for="nameInput">Nombre</label>
                <input type="text" id="nameInput" name="nameInput" class="form-control">
            </div>
            <div class="form-group">
                <label for="priceInput">Precio</label>
                <input type="number" id="priceInput" name="priceInput" class="form-control">
            </div>
            <div class="form-group">
                <label for="linkInput">Link</label>
                <input type="text" id="linkInput" name="linkInput" class="form-control">
            </div>
            <button class="btn btn-success mt-3 mb-5" onclick="return addProduct()">Enviar</button>
        </form>
        <div class="container d-flex flex-column mt-3">
            <h1 class="text-center" style="color:blue;">Vista de productos</h1>
            <div class="table-responsive" id="tableProductos">
            </div>
        </div>

    </div>
    <div class="mt-3 col">
        <h1 class="text-center" style="color:blue;">Centro de mensajes</h1>
        <h3 class="text-center" id="compressionPorcentaje"></h3>
        <form>
            <div class="form-group">
                <label for="idUser">Email</label>
                <input type="email" id="idUser" name="idUser" class="form-control">
            </div>
            <div class="form-group">
                <label for="nameUser">Nombre</label>
                <input type="text" id="nameUser" name="nameUser" class="form-control">
            </div>
            <div class="form-group">
                <label for="lastNameUser">Apellido</label>
                <input type="text" id="lastNameUser" name="lastNameUser" class="form-control">
            </div>
            <div class="form-group">
                <label for="ageUser">Edad</label>
                <input type="number" id="ageUser" name="ageUser" class="form-control">
            </div>
            <div class="form-group">
                <label for="nickNameUser">Alias</label>
                <input type="text" id="nickNameUser" name="nickNameUser" class="form-control">
            </div>
            <div class="form-group">
                <label for="avatarUser">Avatar</label>
                <input type="text" id="avatarUser" name="avatarUser" class="form-control">
            </div>
            <div class="form-group">
                <label for="textMsg">Mensaje:</label>
                <input type="text" id="textMsg" name="textMsg" class="form-control">
            </div>
            <button class="btn btn-success mt-3 mb-5" onclick="return addMessage()">Enviar</button>
        </form>
        <div class="container d-flex flex-column mt-3">
            <h1 class="text-center" style="color:blue;">Vista de mensajes</h1>
            <div id="mensajes">
            </div>
        </div>
    </div>
</div>
<script src="main.js"></script>