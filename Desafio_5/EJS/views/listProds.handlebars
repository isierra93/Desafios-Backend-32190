<div class="container d-flex flex-column mt-3">
        <h1 class="text-center" style="color:blue;">Vista de productos</h1>
    {{#if productos}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Link</th>
                    {{#each productos}}
                        <tr>
                            <td>
                                {{id}}
                            </td>
                            <td>
                                {{nameInput}}
                            </td>
                            <td>
                                {{priceInput}}
                            </td>
                            <td>
                                <img style="height: 2rem; width: 2rem;" src={{linkInput}} alt={{nameInput}}>
                            </td>
                        </tr>
                    {{/each}}
            </table>
        </div>
        {{else}}
            <h3 class="alert alert-danger text-center">No se encontraron productos</h3>
    {{/if}}
    <button class="btn btn-success linksNav"><a href="/">Cargar productos</a></button>
</div>


    
